<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
  
<!-- list contacts view -->

  <!-- Main Content -->
  <main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1><%= title %></h1>

            <% if(typeof displayName == 'string' && displayName) { %>
            <a href="/business-list/add" class="btn btn-primary" role="button">
            <i class="fas fa-plus-circle"></i> Add New Contact</a>
            <%} %>

            <br>
            <br>
            <div class="table-responsive">
            <table class="table table-dark table-sm table-bordered table-striped table-hover  ">
                <!-- Header Row-->
                <tr>
                  
                    <th class="text-center col-2">Survey Name</th>
                    <th class="text-center col-2">Author Number</th>
                    <th class="text-center col-4">Number of questions</th>
                    <th class="text-center col-1"></th>
                    <th class="text-center col-1"></th>
                    <th class="text-center col-1"></th>
                    <th class="text-center col-1"></th>
                 

                </tr>

                <!-- Repeatable Template Row  that lists contacts alphabetically -->
                <% for(let count = 0; count <SurveyList.length; count++) { %>
                 <%SurveyList.sort((a,b)=> (a.name<b.name)*-1);%> 
                    <tr>
                        <td class="text-center col-2"><%= SurveyList[count].name %> </td>
                        <td class="text-center col-2"><%= SurveyList[count].author %></td>
                        <td class="text-center col-4"><%= SurveyList[count].questionsNumber%></td>
                                    <td class="text-center col-1">
                                    <a href="/survey-list/edit/<%= SurveyList[count]._id %>" class="btn btn-primary btn-sm">
                                    <i class="fas fa-pencil-alt"></i> Update</a></td>
                                    <td class="text-center col-1">
                                    <a href="/survey-list/delete/<%= SurveyList[count]._id %>" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete</a>
                                    <i class="fas fa-pencil-alt"></i> Create Survey</a></td>
                                    <td class="text-center col-1">
                                    <a href="/survey-list/delete/<%= SurveyList[count]._id %>" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete</a>
                        </td></tr>
                       
                <% } %>
            </table>
            </div>
        </div>
    </div>
  </main>
  
<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>
  


