<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!-- edit view -->

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Survey Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter survey name"
                    name="name" 
                    value="<%= survey.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="numberTextField">Author Name</label>
                    <input type="text" class="form-control"
                    id="numberTextField"
                    placeholder="Enter first and last name"
                    name="author" 
                    value="<%= survey.author %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control"
                    id="numberTextField"
                    placeholder="Enter first and last name"
                    name="questionsNumber" 
                    value="<%= survey.questionsNumber %>"
                    required>
                </div>
             
                <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/business-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>
  