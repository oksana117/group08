<!-- Content for the Add page -->
<style>
 #font{
      color: #2E8BC0  ;
      font-family: Arial, Helvetica, sans-serif;

    }

    #font2{
     color: #05445E  ;
    
    }
  
</style>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1 class id="font"><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField" class >Survey Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter survey name"
                    name="name" required>
                </div>
                
                <div class="form-group">
                    <label for="numberTextField">Author Name</label>
                    <input type="text" class="form-control"
                    id="numberTextField"
                    placeholder="Enter first and last name"
                    name="displayName" required>
                </div> 

                <div class="form-group">
                    <label for="emailTextField">End Date</label>
                    <input type="date" class="form-control"
                    id="endDate"
                    placeholder="Enter the end date of survey" min="<%= minDate %>" value="<%= minDate %>"
                    name="endDate" required>
                </div>                
                
                 <a href="/survey-list" > <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button> </a> 
                
                    <a href="/home" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>

